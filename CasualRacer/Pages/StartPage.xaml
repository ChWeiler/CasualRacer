<Page x:Class="CasualRacer.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CasualRacer.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="StartPage">

    <Grid Background="Aqua">
        <StackPanel Width="200" VerticalAlignment="Center">
            <Button Content="Start Game" Click="Button_Start" />
            <Button Content="Options" Click="Button_Option" />
            <Button Content="Exit" Click="Button_Exit" />
        </StackPanel>

    </Grid>
</Page>
